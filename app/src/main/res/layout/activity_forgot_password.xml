<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.ForgotPasswordActivity">

    <TextView
        android:id="@+id/forgot_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Esqueci minha senha"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/forgot_password_edit_txt_email"
        style="@style/CustomEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:hint="E-mail*"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_title"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/forgot_password_bt_back_to_login"
        style="@style/CustomButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/green"
        android:text="Entrar"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_edit_txt_email"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_edit_txt_email"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_edit_txt_email" />

    <Button
        android:id="@+id/btnRecuperar"
        style="@style/CustomButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/light_blue"
        android:text="Recuperar"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_edit_txt_email"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_edit_txt_email"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_bt_back_to_login" />

</androidx.constraintlayout.widget.ConstraintLayout>