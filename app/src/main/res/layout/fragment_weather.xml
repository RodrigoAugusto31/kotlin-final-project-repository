<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.WeatherFragment">

    <ImageView
        android:id="@+id/weather_fragment_img_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weather_fragment_txt_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/weather_fragment_img_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weather_fragment_txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/weather_fragment_txt_temperature"
        app:layout_constraintTop_toBottomOf="@+id/weather_fragment_txt_temperature" />

    <TextView
        android:id="@+id/weather_fragment_txt_neighborhood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/weather_fragment_txt_description"
        app:layout_constraintTop_toBottomOf="@+id/weather_fragment_txt_description" />


</androidx.constraintlayout.widget.ConstraintLayout>